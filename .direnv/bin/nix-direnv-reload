#!/usr/bin/env bash
set -e
if [[ ! -d "/home/guus/Code/Artificial-Intelligence/b4/thesis/code/eeg2code+bds" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/guus/Code/Artificial-Intelligence/b4/thesis/code/eeg2code+bds")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/guus/Code/Artificial-Intelligence/b4/thesis/code/eeg2code+bds" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/guus/Code/Artificial-Intelligence/b4/thesis/code/eeg2code+bds/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/guus/Code/Artificial-Intelligence/b4/thesis/code/eeg2code+bds/.envrc" "/home/guus/Code/Artificial-Intelligence/b4/thesis/code/eeg2code+bds/.direnv"/*.rc
